@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc.Extensions
@using Indegene.Sitecore.Demo.MVC.Models
@model CarouselViewModel

@if (Model != null && Model.Slides != null && Model.Slides.Count > 0)
{
    <!-- Carousel Start -->
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int index = 0; index < Model.Slides.Count; index++)
            {
                <li data-target="#carousel" data-slide-to="@index" class="@Model.Slides[index].Style"></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var slide in Model.Slides)
            {
            <div class="carousel-item @slide.Style">
                @slide.BackgroundImage
                @using (Html.EditFrame(Model.DatasourcePath, "/sitecore/content/Applications/WebEdit/Edit Frame Buttons/Builderz/Carousel Slide Frame", "My custom title", "My custom tooltip", "cssClassName", null))
                {
                    <div class="carousel-caption">
                        <p class="animated fadeInRight">
                            @slide.Title
                        </p>
                        <h1 class="animated fadeInLeft">@slide.SubTitle</h1>
                        @*<a class="btn animated fadeInUp" href="https://htmlcodex.com/construction-company-website-template">
                Get A Quote</a>*@
                        @slide.Link
                    </div>
                }
            </div>
            }
        </div>
        @if (Model.Slides.Count > 1)
        {
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        }
    </div>
    <!-- Carousel End -->
}